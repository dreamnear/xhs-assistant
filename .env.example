# ============================================
# 环境变量配置示例
# ============================================
# 复制此文件为 .env 并填写实际值
# 命令: cp .env.example .env

# ============================================
# 基本配置
# ============================================

# 数据输出目录（相对路径或绝对路径）
OUTPUT_DIR=output

# 会话保存目录（用于保存浏览器登录状态）
SESSION_DIR=.sessions

# 日志级别: DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO

# 日志目录
LOG_DIR=logs

# ============================================
# 浏览器配置
# ============================================

# 浏览器类型: chromium / firefox / webkit
BROWSER_TYPE=chromium

# 是否显示浏览器窗口: true / false
# 首次登录建议设置为 true，后续可设置为 false
HEADLESS=false

# 浏览器窗口大小
BROWSER_WIDTH=1280
BROWSER_HEIGHT=720

# 页面加载超时时间（毫秒）
PAGE_TIMEOUT=30000

# ============================================
# 定时任务配置（可选）
# ============================================

# 是否启用定时任务: true / false
SCHEDULER_ENABLED=false

# 定时任务执行时间（cron格式）
# 示例：每天凌晨2点执行
SCHEDULER_CRON=0 2 * * *

# ============================================
# 数据导出配置
# ============================================

# 导出文件格式: csv / excel / both
EXPORT_FORMAT=excel

# 是否自动添加日期戳到文件名: true / false
ADD_DATE_PREFIX=true

# CSV文件编码
CSV_ENCODING=utf-8-sig

# 默认抓取粉丝数据天数
DEFAULT_FOLLOWER_DAYS=30

# 小红书创作者平台URL
CREATOR_PLATFORM_URL=https://creator.xiaohongshu.com

# ============================================
# 其他配置
# ============================================

# 时区
TZ=Asia/Shanghai

# 语言
LANGUAGE=zh_CN.UTF-8
